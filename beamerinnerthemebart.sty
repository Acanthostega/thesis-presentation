    % only for the first page (the titlepage)
    \ifnum\thepage<2\relax%

        % draw the background image with a fading style
        % image always positioned with their center
        \begin{tikzpicture}[overlay, remember picture]
            \fill[black] (0,0) rectangle (\paperwidth,-\paperheight);
            \node[scope fading=titlepage] at ($
                (current page.north west) + (0.5\paperwidth, -0.5\paperheight)
            $) {%
                \includegraphics[width=\paperwidth]{%
                    andromede2.jpg%
                }
            };
        \end{tikzpicture}
    \fi
}

